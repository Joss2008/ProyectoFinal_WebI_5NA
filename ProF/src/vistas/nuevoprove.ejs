<!DOCTYPE html>
<html>
<head>
	<title>Nuevo Proveedor</title>
	<link rel="stylesheet" type="text/css" href="estilos.css">
</head>
<body>
	<div class="modal fade" id="nuevo" tabindex="-1" aria-labelledby="nuevoLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	    	<form method="post" action="/nuevoprove" >
		      <div class="modal-header">
		        <h5 class="modal-title" id="nuevoLabel" style="font-size: 22px;">Nuevo proveedor</h5>
		      </div>
		      <div class="modal-body">
	                <div class="form-group">
	                  <label for="exampleInputEmail1">Nombres</label>
	                  <input type="text" class="form-control" id="nombre" name="nombre_prove" required="required">
	                </div>
	                <div class="form-group">
	                  <label for="exampleInputEmail1">Ruta</label>
	                  <input type="text" class="form-control" id="ruta" name="ruta_prove" required="required">
	                </div>
	                <div class="form-group">
	                  <label for="exampleInputEmail1">Tel√©fono</label>
	                  <input type="text" class="form-control" id="telefono" name="tel_prove" required="required">
	                </div>
		      </div>
		      <div class="modal-footer">
		      	    <button type="button" class="btn btn-secondary" onclick="window.close();"data-dismiss="modal">Close</button>
			        <button type="submit" name="nuevo" onclick="nuevoproveedor();" class="btn btn-primary">Guardar <i class="fas fa-save"></i></button>
			  </div>
			  <script type="text/javascript">
                    function nuevoproveedor(){
                      nombre_prove =document.getElementById('nombre').value;
                      ruta_prove =document.getElementById('ruta').value;
                      tel_prove =document.getElementById('telefono').value;
                      
                      if (nombre_prove==null || nombre_prove.length ==0) {
                        alert("Algunos campos estan vacios");
                        return false;
                      }
                      if (ruta_prove==null || ruta_prove.length ==0) {
                        alert("Algunos campos estan vacios");
                        return false;
                      }
                      if (tel_prove==null || tel_prove.length ==0) {
                        alert("Algunos campos estan vacios");
                        return false;
                      }
                      if( !(/^\d{10}$/.test(tel_prove)) ) 
        			  { 
				        alert("telefono incorrecto")
				        return false; 
				      }
                      alert("Proveedor agregado")
                      window.close();
                      return true;
                    }
                  </script>
		      </div>
		    </form>
	    </div>
	  </div>
	</div>
</body>
</html>

	